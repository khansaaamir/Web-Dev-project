<div style="max-width:800px;margin:10px auto;font-family:Arial;text-align:center; padding-top: 9%;">
<h2>Your Orders</h2>

<% if(orders.length === 0){ %>
  <p>No orders found for this email.</p>
<% } else { %>
  <table style="width:100%;border-collapse:collapse;margin-top:20px">
    <tr>
      <th style="border:1px solid #ddd;padding:10px">Order ID</th>
      <th style="border:1px solid #ddd;padding:10px">Date</th>
      <th style="border:1px solid #ddd;padding:10px">Total</th>
      <th style="border:1px solid #ddd;padding:10px">Status</th>
    </tr>
    <% orders.forEach(function(order){ %>
      <tr>
        <td style="border:1px solid #ddd;padding:10px"><%= order._id %></td>
        <td style="border:1px solid #ddd;padding:10px"><%= order.createdAt ? order.createdAt.toDateString() : 'N/A' %></td>
        <td style="border:1px solid #ddd;padding:10px">$<%= order.total %></td>
        <td style="border:1px solid #ddd;padding:10px"><%= order.status %></td>
      </tr>
    <% }) %>
  </table>
<% } %>

<a href="/" style="display:inline-block;margin-top:20px">Go Home</a>
</div>
